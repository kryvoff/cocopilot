{
  "name": "cocopilot",
  "version": "0.6.0",
  "description": "Coco the copilot for copilot â€” monitor GitHub Copilot CLI activity with dashboards, 3D scenes, and audio",
  "author": "Christoph Deil",
  "license": "MIT",
  "main": "./out/main/index.js",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "test:unit": "vitest run",
    "pretest:unit": "npm rebuild better-sqlite3 --loglevel=silent",
    "test:unit:watch": "vitest",
    "test": "npm run test:unit",
    "test:e2e": "npx playwright test",
    "test:e2e:update": "npx playwright test --update-snapshots",
    "test:smoke": "bash scripts/smoke-test.sh",
    "check": "npx tsx --tsconfig tsconfig.node.json src/main/cli/check.ts",
    "rebuild:electron": "electron-rebuild -f",
    "predev": "electron-rebuild -f",
    "prebuild": "electron-rebuild -f",
    "pretest:e2e": "electron-rebuild -f && electron-vite build"
  },
  "dependencies": {
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "better-sqlite3": "^12.6.0",
    "chokidar": "^4.0.3",
    "howler": "^2.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.182.0",
