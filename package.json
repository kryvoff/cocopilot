    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/howler": "^2.2.12",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.0",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
